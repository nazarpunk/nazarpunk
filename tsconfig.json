{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "removeComments": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "ES6",
    "target": "ES6",
    "baseUrl": ".",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "/*": ["./*"]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ]
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    ".idea",
    "node_modules"
  ]
}